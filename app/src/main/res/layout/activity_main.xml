<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
         android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"  android:id="@+id/loginLayout"
        android:visibility="visible">

        <EditText
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:id="@+id/usernameET"
            android:background="#ffffff"
            android:hint="Username"
            android:textColorHint="#93b0b0b0"
            android:textSize="22dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:text="Join"
            android:id="@+id/joinBtn"
            android:layout_toRightOf="@+id/usernameET"
            android:gravity="center_vertical|center_horizontal" />
    </RelativeLayout>
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="fill_parent" android:id="@+id/chatLayout" android:visibility="gone">

        <ListView android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/chatList"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/isTyping"
            android:visibility="gone" android:textColor="#22000000" />

        <LinearLayout
            android:background="#959595"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/controllsLL">

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Mntn"
                android:id="@+id/mentionBtn" android:visibility="gone"/>

            <EditText
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textET"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Send"
                android:id="@+id/sendBtn" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>